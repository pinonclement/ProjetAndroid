<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Surnom" 
    android:background="@drawable/fd">

    <TextView
        android:id="@+id/user1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Nommerjoueur"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="user1" />

    <TextView
        android:id="@+id/user2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textuser2"
        android:layout_alignLeft="@+id/user1"
        android:text="user2" />

    <TextView
        android:id="@+id/Nommerjoueur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Nommez les joueurs"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/textuser1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user1"
        android:layout_alignBottom="@+id/user1"
        android:layout_centerHorizontal="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/textuser2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textuser1"
        android:layout_below="@+id/textuser1"
        android:layout_marginTop="18dp"
        android:ems="10" />

    <EditText
        android:id="@+id/textuser4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textuser3"
        android:layout_below="@+id/textuser3"
        android:ems="10" />

    <EditText
        android:id="@+id/textuser3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textuser2"
        android:layout_below="@+id/textuser2"
        android:ems="10" />

    <Button
        android:id="@+id/okbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textuser4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="      Ok      " />

</RelativeLayout>